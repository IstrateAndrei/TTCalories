<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toptal.calories">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.CaloriesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_ttcalories_launch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ttcalories_launch"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calories">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Calories.NoActionBar"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <activity
            android:name=".ui.auth.AuthActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"></activity>

        <activity
            android:name=".ui.admin.AdminActivity"
            android:exported="true"
            android:label="Admin Panel"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>