<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="itemTitleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_default_size_dimen</item>
        <item name="android:padding">@dimen/default_text_padding_dimen</item>
        <item name="android:layout_margin">@dimen/default_text_margin_dimen</item>
        <item name="android:drawablePadding">@dimen/default_text_margin_dimen</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="itemSubtitleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/text_small_size_dimen</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/default_text_margin_dimen</item>
    </style>

</resources>