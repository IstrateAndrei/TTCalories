<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/userLoginFragment">

    <fragment
        android:id="@+id/userLoginFragment"
        android:name="com.toptal.calories.ui.auth.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_user_login">
        <action
            android:id="@+id/login_to_register_action"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.toptal.calories.ui.auth.register.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/register_fragment_layout">

    </fragment>
</navigation>